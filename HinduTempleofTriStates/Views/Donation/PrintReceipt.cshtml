@model HinduTempleofTriStates.Models.Donation

@{
    ViewData["Title"] = "Print Receipt";
}

<div class="container mt-4">
    <h1>@ViewData["Title"]</h1>

    <p><strong>Donor Name:</strong> @Model.DonorName</p>
    <p><strong>Amount:</strong> @Model.Amount.ToString("C")</p>
    <p><strong>Donation Type:</strong> @Model.DonationType</p>
    <p><strong>Date:</strong> @Model.Date.ToShortDateString()</p>
    <p><strong>Phone:</strong> @Model.Phone</p>
    <p><strong>City:</strong> @Model.City</p>
    <p><strong>State:</strong> @Model.State</p>
    <p><strong>Country:</strong> @Model.Country</p>

    <button type="button" onclick="window.print();" class="btn btn-info">Print Receipt</button>

    <div class="form-group mt-3">
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>
