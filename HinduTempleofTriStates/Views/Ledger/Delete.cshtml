@model HinduTempleofTriStates.Models.LedgerAccount

@{
    ViewData["Title"] = "Delete Ledger Account";
}

<h1>Are you sure you want to delete this account?</h1>

<div>
    <h4>@Model.AccountName</h4>
    <dl class="row">
        <dt class="col-sm-2">Account Type</dt>
        <dd class="col-sm-10">@Model.AccountType</dd>

        <dt class="col-sm-2">Balance</dt>
        <dd class="col-sm-10">@Model.Balance.ToString("C")</dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a href="@Url.Page("Index")" class="btn btn-secondary">Cancel</a>
    </form>
</div>
