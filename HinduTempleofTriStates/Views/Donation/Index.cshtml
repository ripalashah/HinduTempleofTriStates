@model IEnumerable<HinduTempleofTriStates.Models.Donation>

@{
    ViewData["Title"] = "Donations List";
}

<div class="container mt-4">
    <h1>@ViewData["Title"]</h1>

    <p>
        <a asp-action="Create" class="btn btn-primary">Add Donation</a>
    </p>

    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Donor Name</th>
                <th>Amount</th>
                <th>Donation Type</th>
                <th>Donation Category</th>
                <th>Ledger Account</th>
                <th>Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var donation in Model)
            {
                <tr>
                    <td>@donation.DonorName</td>
                    <td>@donation.Amount.ToString("C")</td> <!-- Display amount as currency -->
                    <td>@donation.DonationType</td>
                    <td>@donation.DonationCategory</td>
                    <td>
                        @if (donation.LedgerAccount != null)
                        {
                            @donation.LedgerAccount.AccountName
                        }
                        else
                        {
                            <span>N/A</span>
                        }
                    </td>
                    <!-- Show ledger account or "N/A" -->
                    <td>@donation.Date.ToShortDateString()</td>
                    <td>
                        <form asp-action="SyncDonation" method="post" asp-route-id="@donation.Id">
                            <input type="submit" value="Sync to QuickBooks" class="btn btn-primary" />
                        </form>
                        <a asp-action="Edit" asp-route-id="@donation.Id" class="btn btn-sm btn-warning">Edit</a>
                        <a asp-action="Delete" asp-route-id="@donation.Id" class="btn btn-sm btn-danger">Delete</a>
                        <a asp-action="PrintReceipt" asp-route-id="@donation.Id" class="btn btn-sm btn-info">Print Receipt</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
