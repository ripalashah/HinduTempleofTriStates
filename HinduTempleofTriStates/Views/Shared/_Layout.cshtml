<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TempleManagementSystem</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" />
    <!-- Font Awesome CSS for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" />
    <!-- Validation Scripts -->
    <partial name="_ValidationScriptsPartial" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand navbar-light bg-light">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">TempleManagementSystem</a>
            <div class="navbar-nav">
                <a class="nav-item nav-link" asp-area="" asp-controller="Donation" asp-action="Index">Donations</a>
                <!-- Accounts Module Navigation Item -->
                <a class="nav-item nav-link" asp-area="" asp-controller="Accounts" asp-action="Index">
                    <i class="fas fa-calculator"></i> Accounts
                </a>
                <!-- Add more navigation items here -->
            </div>
        </nav>
    </header>
    <main role="main" class="container">
        @RenderBody()
    </main>
    <footer class="footer">
        <div class="container">
            <p class="text-muted">&copy; 2024 - TempleManagementSystem</p>
        </div>
    </footer>
    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
