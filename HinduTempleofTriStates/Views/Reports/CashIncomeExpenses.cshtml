@model HinduTempleofTriStates.ViewModels.CashIncomeExpensesViewModel

@using System.Linq

<h2>Cash Income and Expenses Report</h2>

@if (Model.CashTransactions != null && Model.CashTransactions.Any())
{
    <div>
        <p>Total Income: @Model.TotalIncome.ToString("C")</p>
        <p>Total Expenses: @Model.TotalExpense.ToString("C")</p>
        <p>Net Balance: @Model.NetBalance.ToString("C")</p>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Date</th>
                <th>Description</th>
                <th>Income</th>
                <th>Expense</th>
                <th>Type</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var transaction in Model.CashTransactions)
            {
                <tr>
                    <td>@transaction.Date.ToShortDateString()</td>
                    <td>@transaction.Description</td>

                    <!-- Check if the transaction is a credit (income) -->
                    <td>@(transaction.TransactionType == TransactionType.Credit ? transaction.Amount.ToString("C") : "")</td>

                    <!-- Check if the transaction is a debit (expense) -->
                    <td>@(transaction.TransactionType == TransactionType.Debit ? transaction.Amount.ToString("C") : "")</td>

                    <td>@transaction.TransactionType</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No transactions available at this time.</p>
}

