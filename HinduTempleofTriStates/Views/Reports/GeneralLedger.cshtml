@model HinduTempleofTriStates.Models.GeneralLedgerModel

<h1>General Ledger Report</h1>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Date</th>
            <th>Description</th>
            <th>Account Name</th>
            <th>Debit</th>
            <th>Credit</th>
            <th>Balance</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var entry in Model.GeneralLedgerEntries)
        {
            <tr>
                <td>@entry.Date.ToShortDateString()</td>
                <td>@entry.Description</td>
                <td>@entry.AccountName</td>
                <td>@(entry.Debit > 0 ? entry.Debit.ToString("C") : "-")</td>
                <td>@(entry.Credit > 0 ? entry.Credit.ToString("C") : "-")</td>
                <td>@entry.Balance.ToString("C")</td>
            </tr>
        }
    </tbody>
</table>

<div class="mt-4">
    <h4>Total Debit: @Model.TotalDebit.ToString("C")</h4>
    <h4>Total Credit: @Model.TotalCredit.ToString("C")</h4>
    <h4>Total Balance: @Model.TotalBalance.ToString("C")</h4>
</div>
