@model HinduTempleofTriStates.Models.Donation

@{
    ViewData["Title"] = "Delete Donation";
}

<div class="container mt-4">
    <h1>@ViewData["Title"]</h1>

    <h4>Are you sure you want to delete this donation?</h4>
    <hr />
    <div>
        <h4>@Model.DonorName</h4>
        <dl class="row">
            <dt class="col-sm-2">Amount</dt>
            <dd class="col-sm-10">@Model.Amount.ToString("C")</dd>

            <dt class="col-sm-2">Category</dt>
            <dd class="col-sm-10">@Model.DonationCategory</dd>

            <dt class="col-sm-2">Type</dt>
            <dd class="col-sm-10">@Model.DonationType</dd>

            <dt class="col-sm-2">Date</dt>
            <dd class="col-sm-10">@Model.Date.ToShortDateString()</dd>

            <dt class="col-sm-2">Phone</dt>
            <dd class="col-sm-10">@Model.Phone</dd>

            <dt class="col-sm-2">City</dt>
            <dd class="col-sm-10">@Model.City</dd>

            <dt class="col-sm-2">State</dt>
            <dd class="col-sm-10">@Model.State</dd>

            <dt class="col-sm-2">Country</dt>
            <dd class="col-sm-10">@Model.Country</dd>
        </dl>
    </div>

    <form asp-action="DeleteConfirmed" asp-route-id="@Model.Id" method="post">
        @Html.AntiForgeryToken()
        <div class="form-group">
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a href="@Url.Action("Index")" class="btn btn-secondary">Cancel</a>
        </div>
    </form>

</div>
