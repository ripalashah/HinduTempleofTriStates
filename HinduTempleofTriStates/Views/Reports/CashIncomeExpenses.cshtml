@page
@using HinduTempleofTriStates.Pages
@model 			CashIncomeExpensesModel
@{
    ViewData["Title"] = "Cash Income & Expenses";
}

<h1>@ViewData["Title"]</h1>

<table class="table">
    <thead>
        <tr>
            <th>Date</th>
            <th>Description</th>
            <th>Income</th>
            <th>Expense</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var entry in Model.CashTransactions)
        {
                <tr>
                    <td>@entry.Date.ToShortDateString()</td>
                    <td>@entry.Description</td>
                    <td>@entry.Income.ToString("C")</td>
                    <td>@entry.Expense.ToString("C")</td>
                </tr>
        }
    </tbody>
</table>
