@model HinduTempleofTriStates.Models.LedgerAccount

@{
    ViewData["Title"] = "Create Ledger Account";
}

<h1>Create Ledger Account</h1>

<form asp-action="Create">
    <div class="form-group">
        @Html.LabelFor(model => model.AccountName)
        @Html.TextBoxFor(model => model.AccountName, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.AccountName)
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
    </div>
</form>

<a href="@Url.Action("Index", "Ledger")">Back to List</a>
