@model IEnumerable<HinduTempleofTriStates.Models.Account>

@{
    ViewData["Title"] = "Accounts";
}

<h1>@ViewData["Title"]</h1>

<div class="card shadow-sm p-4 mb-4">
    <p>
        <a asp-action="Create" class="btn btn-primary">Create New Account</a>
    </p>
    <!-- Search form -->
    @{
        var searchQuery = Context.Request.Query["search"];
    }

    <form asp-action="Index" method="get">
        <input type="text" name="search" value="@searchQuery" placeholder="Search Accounts..." class="form-control" />
        <button type="submit" class="btn btn-primary">Search</button>
    </form>
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Account Name</th>
                    <th>Balance</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    @foreach (var account in Model)
                    {
                        <tr>
                            <td>@account.AccountName</td>
                            <td>@account.Balance.ToString("C")</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@account.Id" class="btn btn-sm btn-warning" title="Edit Account">
                                    <i class="bi bi-pencil"></i> Edit
                                </a>
                                <a asp-action="Details" asp-route-id="@account.Id" class="btn btn-sm btn-info" title="View Details">
                                    <i class="bi bi-info-circle"></i> Details
                                </a>
                                <a asp-action="Delete" asp-route-id="@account.Id" class="btn btn-sm btn-danger" title="Delete Account">
                                    <i class="bi bi-trash"></i> Delete
                                </a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="3" class="text-center">No accounts available.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
