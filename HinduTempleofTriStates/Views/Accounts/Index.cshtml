@model IEnumerable<HinduTempleofTriStates.Models.Account>

@{
    ViewData["Title"] = "Accounts";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Account</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Account Name</th>
            <th>Balance</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            @foreach (var account in Model)
            {
                <tr>
                    <td>@account.AccountName</td>
                    <td>@account.Balance.ToString("C")</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@account.Id" class="btn btn-sm btn-warning">Edit</a>
                        <a asp-action="Details" asp-route-id="@account.Id" class="btn btn-sm btn-info">Details</a>
                        <a asp-action="Delete" asp-route-id="@account.Id" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="3" class="text-center">No accounts available.</td>
            </tr>
        }
    </tbody>
</table>
