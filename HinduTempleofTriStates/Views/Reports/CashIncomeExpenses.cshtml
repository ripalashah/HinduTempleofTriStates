@model HinduTempleofTriStates.Models.CashIncomeExpensesModel

<h1>Cash Income and Expenses Report</h1>

<div class="card">
    <div class="card-body">
        <h4>Total Income: @Model.TotalIncome.ToString("C")</h4>
        <h4>Total Expenses: @Model.TotalExpense.ToString("C")</h4>
        <h4>Net Balance: @Model.NetBalance.ToString("C")</h4>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>Date</th>
            <th>Description</th>
            <th>Income</th>
            <th>Expense</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var transaction in Model.CashTransactions)
        {
            <tr>
                <td>@transaction.Date.ToShortDateString()</td>
                <td>@transaction.Description</td>
                <td>@(transaction.Type == HinduTempleofTriStates.Models.CashTransactionType.Income ? transaction.Amount.ToString("C") : "-")</td>
                <td>@(transaction.Type == HinduTempleofTriStates.Models.CashTransactionType.Expense ? transaction.Amount.ToString("C") : "-")</td>
            </tr>
        }
    </tbody>
</table>
