@model HinduTempleofTriStates.Models.Donation

@{
    ViewData["Title"] = "Edit Donation";
}

<h1>@ViewData["Title"]</h1>

<div class="container mt-4">
    <!-- Form for editing the donation -->
    <form asp-action="Edit" method="post">
        @Html.AntiForgeryToken() <!-- Anti-forgery token for security -->
        <!-- Donor Name -->
        <div class="form-group">
            <label asp-for="DonorName" class="control-label"></label>
            <input asp-for="DonorName" class="form-control" />
            <span asp-validation-for="DonorName" class="text-danger"></span>
        </div>

        <!-- Amount -->
        <div class="form-group">
            <label asp-for="Amount" class="control-label"></label>
            <input asp-for="Amount" type="number" step="0.01" class="form-control" />
            <span asp-validation-for="Amount" class="text-danger"></span>
        </div>

        <!-- Donation Category -->
        <div class="form-group">
            <label asp-for="DonationCategory" class="control-label"></label>
            <input asp-for="DonationCategory" class="form-control" />
            <span asp-validation-for="DonationCategory" class="text-danger"></span>
        </div>

        <!-- Donation Type -->
        <div class="form-group">
            <label asp-for="DonationType" class="control-label"></label>
            <select asp-for="DonationType" class="form-control">
                <option value="">Select Donation Type</option>
                <option value="Cash">Cash</option>
                <option value="Product">Product</option>
                <option value="Credit Card">Credit Card</option>
                <option value="Zelle">Zelle</option>
                <option value="Check">Check</option>
            </select>
            <span asp-validation-for="DonationType" class="text-danger"></span>
        </div>

        <!-- Date -->
        <div class="form-group">
            <label asp-for="Date" class="control-label"></label>
            <input asp-for="Date" class="form-control" type="date" />
            <span asp-validation-for="Date" class="text-danger"></span>
        </div>

        <!-- Phone -->
        <div class="form-group">
            <label asp-for="Phone" class="control-label"></label>
            <input asp-for="Phone" class="form-control" />
            <span asp-validation-for="Phone" class="text-danger"></span>
        </div>

        <!-- Ledger Account ID -->
        <div class="form-group">
            <label asp-for="LedgerAccountId" class="control-label"></label>
            <select asp-for="LedgerAccountId" class="form-control" asp-items="ViewBag.LedgerAccounts">
                <option value="">Select Ledger Account</option>
            </select>
            <span asp-validation-for="LedgerAccountId" class="text-danger"></span>
        </div>

        <!-- Submit Button -->
        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-primary" />
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </form>

    @section Scripts {
        <!-- Include validation scripts partial for client-side validation -->
        <partial name="_ValidationScriptsPartial" />
    }
</div>
