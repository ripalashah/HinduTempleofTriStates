@page
@model             ProfitLossModel
@{
    ViewData["Title"] = "Profit and Loss";
}

<h1>@ViewData["Title"]</h1>

<table class="table">
    <thead>
        <tr>
            <th>Category</th>
            <th>Amount</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ProfitLossItems)
        {
            <tr>
                <td>@item.Category</td>
                <td>@item.Amount.ToString("C")</td>
            </tr>
        }
    </tbody>
</table>
