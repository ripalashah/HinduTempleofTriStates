@page
@using HinduTempleofTriStates.Pages.Reports
@model GeneralLedgerModel

@{
    ViewData["Title"] = "General Ledger";
}

<h1>@ViewData["Title"]</h1>

<table class="table table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>Date</th>
            <th>Description</th>
            <th>Account</th>
            <th>Debit</th>
            <th>Credit</th>
            <th>Balance</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.GeneralLedgerEntries != null && Model.GeneralLedgerEntries.Any())
        {
            foreach (var entry in Model.GeneralLedgerEntries)
            {
                <tr>
                    <td>@entry.Date.ToShortDateString()</td>
                    <td>@entry.Description</td>
                    <td>@entry.AccountName</td>
                    <td>@entry.Debit.ToString("C")</td>
                    <td>@entry.Credit.ToString("C")</td>
                    <td>@entry.Balance.ToString("C")</td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="6" class="text-center">No ledger entries available.</td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <th colspan="3">Total</th>
            <th>@Model.TotalDebit.ToString("C")</th>
            <th>@Model.TotalCredit.ToString("C")</th>
            <th>@Model.TotalBalance.ToString("C")</th>
        </tr>
    </tfoot>
</table>

<div class="mt-4">
    <a asp-action="ExportToPdf" class="btn btn-secondary">Export to PDF</a>
</div>
