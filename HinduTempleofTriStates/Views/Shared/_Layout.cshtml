<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TempleManagementSystem</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" />

    <!-- Font Awesome CSS for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />

    <!-- Custom CSS (Optional) -->
    <link rel="stylesheet" href="~/css/site.css" />

    <!-- Validation Scripts -->
    <partial name="_ValidationScriptsPartial" />
</head>
<body>
    <!-- Navigation Bar -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">TempleManagementSystem</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Donation" asp-action="Index">Donations</a>
                    </li>
                    <!-- Accounts Module Navigation Item -->
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Accounts" asp-action="Index">
                            <i class="fas fa-calculator"></i> Accounts
                        </a>
                    </li>
                    <!-- Ledger Module Navigation Item -->
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Ledger" asp-action="Index">
                            <i class="fas fa-book"></i> Ledger
                        </a>
                    </li>
                    <!-- Add more navigation items here as needed -->
                </ul>
            </div>
        </nav>
    </header>

    <!-- Main Content Area -->
    <main role="main" class="container mt-4">
        @RenderBody()
    </main>

    <!-- Footer Section -->
    <footer class="footer mt-4 bg-light">
        <div class="container">
            <p class="text-muted">&copy; @DateTime.Now.Year - TempleManagementSystem</p>
        </div>
    </footer>

    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

    <!-- Optional Section for Page-Specific Scripts -->
    @RenderSection("Scripts", required: false)
</body>
</html>
