@model HinduTempleofTriStates.Models.Account

@{
    ViewData["Title"] = "Account Details";
}

<h1>@ViewData["Title"]</h1>

<div class="card shadow-sm p-4">
    <h4>Account Information</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">
            <label asp-for="AccountName" class="control-label"></label>
        </dt>
        <dd class="col-sm-9">
            @Model.AccountName
        </dd>
        <dt class="col-sm-3">
            <label asp-for="Balance" class="control-label"></label>
        </dt>
        <dd class="col-sm-9">
            @Model.Balance.ToString("C")
        </dd>
    </dl>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
    <a asp-action="Index" class="btn btn-secondary ml-2">Back to List</a>
</div>
