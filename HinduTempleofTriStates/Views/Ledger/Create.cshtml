@model HinduTempleofTriStates.Models.LedgerAccount

@{
    ViewData["Title"] = "Create Ledger Account";
}

<h2>Create Ledger Account</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="AccountName" class="control-label"></label>
        <input asp-for="AccountName" class="form-control" />
        <span asp-validation-for="AccountName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="AccountType" class="control-label"></label>
        <select asp-for="AccountType" class="form-control">
            <option value="">-- Select Account Type --</option>
            @foreach (var type in Enum.GetValues(typeof(HinduTempleofTriStates.Models.AccountTypeEnum)))
            {
                <option value="@type">@type</option>
            }
        </select>
        <span asp-validation-for="AccountType" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Balance" class="control-label"></label>
        <input asp-for="Balance" class="form-control" />
        <span asp-validation-for="Balance" class="text-danger"></span>
    </div>

    <!-- Add other required fields like Donations, CashTransactions, GeneralLedgerEntries -->
    <div class="form-group">
        <label asp-for="Donations" class="control-label"></label>
        <input asp-for="Donations" class="form-control" />
        <span asp-validation-for="Donations" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CashTransactions" class="control-label"></label>
        <input asp-for="CashTransactions" class="form-control" />
        <span asp-validation-for="CashTransactions" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="GeneralLedgerEntries" class="control-label"></label>
        <input asp-for="GeneralLedgerEntries" class="form-control" />
        <span asp-validation-for="GeneralLedgerEntries" class="text-danger"></span>
    </div>

    <!-- Hidden fields for CreatedBy and UpdatedBy -->
    <input type="hidden" asp-for="CreatedBy" value="System" />
    <input type="hidden" asp-for="UpdatedBy" value="System" />

    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
