@model IEnumerable<HinduTempleofTriStates.Models.Fund>

@{
    ViewData["Title"] = "Manage Funds";
}

<h2>@ViewData["Title"]</h2>

<div class="card shadow-sm p-4 mb-4">
    <div class="mb-3">
        <!-- Optional: Add a button to create new funds or manage existing ones -->
        <a asp-action="CreateFund" class="btn btn-primary">Add New Fund</a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Fund Name</th>
                    <th>Balance</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    @foreach (var fund in Model)
                    {
                        <tr>
                            <td>@fund.FundName</td>
                            <td>@fund.Balance.ToString("C")</td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="2" class="text-center">No funds available.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
