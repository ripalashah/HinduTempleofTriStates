@model HinduTempleofTriStates.Models.LedgerAccount

@{
    ViewData["Title"] = "Edit Ledger Account";
}

<h1>Edit Ledger Account</h1>

<!-- Form for editing an existing Ledger Account -->
<form method="post">
    <div class="form-group">
        @Html.LabelFor(model => model.AccountName)
        @Html.TextBoxFor(model => model.AccountName, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.AccountName)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.AccountType)
        @Html.DropDownListFor(model => model.AccountType, new SelectList(Enum.GetValues(typeof(HinduTempleofTriStates.Models.AccountTypeEnum))), new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.AccountType)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Balance)
        @Html.TextBoxFor(model => model.Balance, "{0:N2}", new { @class = "form-control", @type = "number", @step = "0.01" })
        @Html.ValidationMessageFor(model => model.Balance)
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Save Changes</button>
    </div>
</form>

<a href="@Url.Page("Index")">Back to List</a>
