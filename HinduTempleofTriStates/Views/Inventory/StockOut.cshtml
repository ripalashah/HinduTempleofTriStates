@model HinduTempleofTriStates.Models.StockTransaction

@{
    ViewData["Title"] = "Stock Out";
}

<h2>Stock Out</h2>

<form asp-action="StockOut">
    <div class="form-group">
        <label for="Quantity">Quantity to Remove</label>
        <input asp-for="Quantity" class="form-control" />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>
    <input type="hidden" asp-for="ProductId" />
    <button type="submit" class="btn btn-danger">Remove Stock</button>
</form>

<a asp-action="Index" class="btn btn-secondary">Back to Inventory</a>
