@model HinduTempleofTriStates.Models.ProfitLossModel

<h1>Profit and Loss Report</h1>

<div class="card">
    <div class="card-body">
        <h4>Total Profit: @Model.TotalProfit.ToString("C")</h4>
        <h4>Total Loss: @Model.TotalLoss.ToString("C")</h4>
        <h4>Net Profit/Loss: @Model.NetProfitLoss.ToString("C")</h4>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>Description</th>
            <th>Amount</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ProfitLossItems)
        {
            <tr>
                <td>@item.Description</td>
                <td>@item.Amount.ToString("C")</td>
            </tr>
        }
    </tbody>
</table>
