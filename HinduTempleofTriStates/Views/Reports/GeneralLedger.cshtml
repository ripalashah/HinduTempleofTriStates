@model HinduTempleofTriStates.ViewModels.GeneralLedgerViewModel

<h2>General Ledger Report</h2>

<table class="table">
    <thead>
        <tr>
            <th>Account Name</th>
            <th>Debit</th>
            <th>Credit</th>
            <th>Balance</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var entry in Model.LedgerEntries)
        {
            <tr>
                <td>@entry.AccountName</td>
                <td>@entry.Debit.ToString("C")</td>
                <td>@entry.Credit.ToString("C")</td>
                <td>@entry.Balance.ToString("C")</td>
            </tr>
        }
    </tbody>
</table>

<p>Total Debits: @Model.TotalDebits.ToString("C")</p>
<p>Total Credits: @Model.TotalCredits.ToString("C")</p>
