@page
@model             GeneralLedgerModel
@{
    ViewData["Title"] = "General Ledger";
}

<h1>@ViewData["Title"]</h1>

<table class="table">
    <thead>
        <tr>
            <th>Date</th>
            <th>Description</th>
            <th>Account</th>
            <th>Debit</th>
            <th>Credit</th>
            <th>Balance</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var entry in Model.GeneralLedgerEntries)
        {
                <tr>
                    <td>@entry.Date.ToShortDateString()</td>
                    <td>@entry.Description</td>
                    <td>@entry.AccountName</td>
                    <td>@entry.Debit.ToString("C")</td>
                    <td>@entry.Credit.ToString("C")</td>
                    <td>@entry.Balance.ToString("C")</td>
                </tr>
        }
    </tbody>
</table>
