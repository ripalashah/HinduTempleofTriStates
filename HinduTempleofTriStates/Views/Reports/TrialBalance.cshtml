@model HinduTempleofTriStates.ViewModels.TrialBalanceViewModel

<h2>Trial Balance Report</h2>

<table>
    <thead>
        <tr>
            <th>Account Name</th>
            <th>Debit Total</th>
            <th>Credit Total</th>
            <th>Net Balance</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var account in Model.TrialBalanceAccounts)
        {
            <tr>
                <td>@account.AccountName</td>
                <td>@account.DebitTotal</td>
                <td>@account.CreditTotal</td>
                <td>@account.NetBalance</td>
            </tr>
        }
    </tbody>
</table>

<p>Total Debits: @Model.TotalDebits</p>
<p>Total Credits: @Model.TotalCredits</p>
<p>Net Balance: @Model.NetBalance</p>
