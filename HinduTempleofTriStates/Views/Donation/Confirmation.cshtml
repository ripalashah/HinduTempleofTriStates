@model HinduTempleofTriStates.Models.Donation

@{
    ViewData["Title"] = "Donation Confirmation";
}

<div class="container mt-4">
    <h1>@ViewData["Title"]</h1>

    <div class="card shadow-sm p-4 mb-4">
        <div class="card-body">
            <h4 class="card-title">Thank you for your donation, @Model.DonorName!</h4>
            <p class="card-text">
                <strong>Donation Amount:</strong> @Model.Amount.ToString("C")<br />
                <strong>Donation Type:</strong> @Model.DonationType<br />
                <strong>Date:</strong> @Model.Date.ToShortDateString()
            </p>

            <div class="d-flex justify-content-between no-print">
                <button onclick="window.print()" class="btn btn-primary">Print Receipt</button>
                <a href="@Url.Action("Index", "Donation")" class="btn btn-secondary">Back to Donations List</a>
            </div>
        </div>
    </div>
</div>

<style>
    @media print {
        .no-print {
            display: none;
        }
    }
</style>
